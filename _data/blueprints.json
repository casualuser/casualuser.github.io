      {
        "id": "sources",
        "name": "Data Sources",
        "type": "external",
        "notes": "APIs, Production DBs, SaaS"
      },
      {
        "id": "ingestion",
        "name": "Airbyte / Fivetran",
        "type": "ingestion-service",
        "depends_on": [
          "sources"
