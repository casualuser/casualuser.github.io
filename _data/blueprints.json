  {
    "version": 1,
    "id": "ai-rag-llm",
    "name": "AI RAG Application (LangChain/Vector DB)",
    "summary": "A reference architecture for a Retrieval-Augmented Generation (RAG) application\nusing LLMs, a vector database for embedding storage, and an orchestration framework.\n",
    "stack": {
      "llm": "openai-gpt4",
      "orchestrator": "langchain",
      "vector_db": "pinecone",
      "app": "python-fastapi",
      "data": "unstructured-docs"
    },
    "components": [
      {
        "id": "user",
        "name": "User Query",
        "type": "actor"
      },
      {
        "id": "app",
        "name": "RAG API Service",
        "type": "service",
        "depends_on": [
          "llm",
          "vector_db"
        ],
        "notes": "Context assembly & Prompt Engineering"
      },
      {
        "id": "ingestion",
        "name": "Ingestion Worker",
        "type": "worker",
        "depends_on": [
          "vector_db",
          "sources"
        ],
        "notes": "Embeds documents into Vector DB"
      },
      {
        "id": "sources",
        "name": "Document Sources",
        "type": "external",
        "notes": "PDFs, Notion, Wikis"
      },
      {
        "id": "llm",
        "name": "LLM Provider (OpenAI)",
        "type": "ai-model",
        "ports": [
          "Inference API"
        ]
      },
      {
        "id": "vector_db",
        "name": "Vector DB (Pinecone/Weaviate)",
        "type": "database",
        "notes": "Semantic Search Index"
      }
    ],
    "groups": [
      {
        "id": "application",
        "members": [
          "app",
          "ingestion"
        ]
      },
      {
        "id": "external-services",
        "members": [
          "llm",
          "vector_db"
        ]
      }
    ],
    "links": [
      {
        "rel": "docs",
        "href": "/solutions/ai-apps/"
      }
    ],
    "tags": [
      "ai",
      "llm",
      "rag",
      "python",
      "langchain"
    ]
  },
  {
    "version": 1,
    "id": "data-analytics-modern",
