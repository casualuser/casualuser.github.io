    "version": 1,
    "id": "go-microservices-gateway",
    "name": "Go microservices behind API Gateway",
    "summary": "Blueprint for a set of Go microservices exposed via an API gateway, backed by\nPostgres and Redis, running on Kubernetes with an ingress controller and\nGitOps-driven deployments.\n",
    "stack": {
      "language": "go",
      "framework": "net-http-or-chi",
      "data_store": "postgres",
      "cache": "redis",
      "deploy_target": "kubernetes",
      "gateway": "api-gateway-or-ingress"
    },
    "components": [
      {
        "id": "gateway",
        "name": "API gateway / ingress controller",
        "type": "gateway",
        "notes": "Nginx Ingress / Envoy / API Gateway entrypoint",
        "depends_on": [
          "svc_public",
          "svc_admin"
        ],
        "ports": [
          "80 HTTP",
          "443 HTTPS"
        ]
      },
      {
        "id": "svc_public",
        "name": "Public HTTP API service",
        "type": "service",
        "language": "go",
        "framework": "chi",
        "depends_on": [
          "db",
          "cache"
        ],
        "ports": [
          "80 HTTP"
        ]
      },
      {
        "id": "svc_admin",
        "name": "Admin / internal service",
        "type": "service",
        "language": "go",
        "framework": "chi",
        "depends_on": [
          "db"
        ],
        "ports": [
          "8080 HTTP"
        ]
      },
      {
        "id": "db",
        "name": "Postgres database",
        "type": "postgres",
        "ports": [
          "5432"
        ]
      },
      {
        "id": "cache",
        "name": "Redis cache / queue",
        "type": "redis",
        "ports": [
          "6379"
        ]
      },
      {
        "id": "observability",
        "name": "Metrics, logs, tracing",
        "type": "observability",
        "notes": "Prometheus, Grafana, Loki/ELK, OpenTelemetry."
      }
    ],
    "kubernetes": {
      "cluster_type": "managed-or-self-hosted",
      "namespaces": [
        {
          "name": "api",
          "components": [
            "gateway",
            "svc_public",
            "svc_admin",
            "db",
            "cache",
            "observability"
          ]
        }
      ]
    },
    "ci_cd": {
      "tools": [
        "github-actions",
        "argo-cd-or-flux"
      ],
      "stages": [
        "build-and-test",
        "container-image-publish",
        "deploy-staging",
        "deploy-production"
      ]
    },
    "links": [
      {
        "rel": "docs",
        "href": "/devops-stack/"
      }
    ],
    "tags": [
      "go",
      "microservices",
      "kubernetes",
      "api-gateway",
      "postgres",
      "redis"
    ]
