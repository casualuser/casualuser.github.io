  {
    "version": 1,
    "id": "event-driven-kafka",
    "name": "Event-Driven Microservices (Kafka)",
    "summary": "A decoupled microservices architecture utilizing Apache Kafka for asynchronous\ncommunication and event streaming between domains.\n",
    "stack": {
      "broker": "kafka",
      "services": "go-java-node",
      "registry": "schema-registry",
      "coordination": "zookeeper-kraft"
    },
    "components": [
      {
        "id": "producer",
        "name": "Order Service",
        "type": "service",
        "depends_on": [
          "kafka"
        ],
        "notes": "Produces 'OrderCreated'"
      },
      {
        "id": "kafka",
        "name": "Kafka Cluster",
        "type": "message-broker",
        "notes": "Topics & Partitions"
      },
      {
        "id": "schema",
        "name": "Schema Registry",
        "type": "registry",
        "depends_on": [
          "kafka"
        ],
        "notes": "Avro/Protobuf definitions"
      },
      {
        "id": "consumer-a",
        "name": "Inventory Service",
        "type": "service",
        "depends_on": [
          "kafka"
        ],
        "notes": "Consumes Order events"
      },
      {
        "id": "consumer-b",
        "name": "Notification Service",
        "type": "service",
        "depends_on": [
          "kafka"
        ],
        "notes": "Consumes Order events"
      },
      {
        "id": "dlq",
        "name": "Dead Letter Queue",
        "type": "storage",
        "depends_on": [
          "consumer-a",
          "consumer-b"
        ]
      }
    ],
    "groups": [
      {
        "id": "core-infra",
        "members": [
          "kafka",
          "schema"
        ]
      },
      {
        "id": "services",
        "members": [
          "producer",
          "consumer-a",
          "consumer-b"
        ]
      }
    ],
    "tags": [
      "kafka",
      "microservices",
      "event-driven",
      "distributed-systems"
    ]
  },
